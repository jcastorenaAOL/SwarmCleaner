<Window x:Class="SwarmCleaner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SwarmCleaner"
        mc:Ignorable="d"
        WindowStyle="None"
        Icon="/Resources/TBIcon.ico"
        Topmost="True"
        Background="Transparent"
        AllowsTransparency="True"
        Title="MainWindow" Height="200" Width="300"
        MouseDown="Window_MouseDown"
        ResizeMode="NoResize"
        >
    <Border Background="White" CornerRadius="10" 
            BorderBrush="Gray" BorderThickness="1"
            SnapsToDevicePixels="True">
        <Grid>
            <Button Width="200" Height="100" Click="SwarmClick">
                <StackPanel Orientation="Horizontal" Width="131">
                    <Image Source="Resources/logo.webp" Width="64" Height="64" />
                    <TextBlock Text="!Swarm" Margin="5,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button Content="X" HorizontalAlignment="Left" Margin="266,10,0,0" VerticalAlignment="Top" Height="20" Width="22" Click="Button_Click"/>
        </Grid>
    </Border>
</Window>
